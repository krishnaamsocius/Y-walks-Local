<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form_ywalks" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ywalks</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='general_settings']" position="inside">
                <block title="Y-Walks Settings" id="y_walks_settings">
                    <setting string="Daily Step Goal"
                             help="Define the minimum number of steps a user should complete each day">
                        <field name="ywalks_daily_step_goal"/>
                    </setting>

                    <setting string="Minimum Streak Days"
                             help="Number of consecutive days required to maintain a walking streak">
                        <field name="ywalks_streak_min_days"/>
                    </setting>

                    <setting string="Enable Rewards"
                             help="Enable reward distribution for users who achieve walking goals">
                        <field name="ywalks_enable_rewards"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
