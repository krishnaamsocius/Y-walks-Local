<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_ywalks_wallet_list" model="ir.ui.view">
        <field name="name">ywalks.wallet.list</field>
        <field name="model">ywalks.wallet</field>
        <field name="arch" type="xml">
            <list>
                <field name="user_id"/>
                <field name="balance"/>
            </list>
        </field>
    </record>

    <record id="view_ywalks_wallet_form" model="ir.ui.view">
        <field name="name">ywalks.wallet.form</field>
        <field name="model">ywalks.wallet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="balance" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Transactions">
                            <field name="transaction_ids">
                                <list>
                                    <field name="create_date"/>
                                    <field name="transaction_type"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ywalks_wallet" model="ir.actions.act_window">
        <field name="name">User Wallets</field>
        <field name="res_model">ywalks.wallet</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                User wallets are created for each user.
            </p>
        </field>
    </record>

</odoo>

