<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_ywalks_league_list" model="ir.ui.view">
        <field name="name">ywalks.league.list</field>
        <field name="model">ywalks.league</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="league_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="visibility"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_ywalks_league_form" model="ir.ui.view">
        <field name="name">ywalks.league.form</field>
        <field name="model">ywalks.league</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="league_type"/>
                        <field name="visibility"/>
                        <field name="leaderboard_metric"/>
                        <field name="max_participants"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ywalks_league" model="ir.actions.act_window">
        <field name="name">Leagues</field>
        <field name="res_model">ywalks.league</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
