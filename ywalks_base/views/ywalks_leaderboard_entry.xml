<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_ywalks_leaderboard_search" model="ir.ui.view">
        <field name="name">ywalks.leaderboard.entry.search</field>
        <field name="model">ywalks.leaderboard.entry</field>
        <field name="arch" type="xml">
            <search string="leaderboard Analysis">
                <field name="user_id"/>
                <field name="period"/>
                <field name="group_id"/>
                <field name="metric"/>

                <!-- Filters -->
                <filter string="Global Leaderboard" name="global_leaderboard" domain="[('group_id', '=', False)]"/>
                <filter string="Group Leaderboard" name="group_leaderboard" domain="[('group_id', '!=', False)]"/>
                <!-- Group By -->
                <!--             <group>-->
                <!--                    <filter string="Metric" name="metric" context="{'group_by':'metric'}"/>-->
                <!--                    <filter string="Period" name="period" context="{'group_by':'period'}"/>-->
                <!--                    <filter string="Group" name="group_id" context="{'group_by':'group_id'}"/>-->
                <!--                </group>-->
            </search>
        </field>
    </record>


    <record id="view_ywalks_leaderboard_list" model="ir.ui.view">
        <field name="name">ywalks.leaderboard.entry.list</field>
        <field name="model">ywalks.leaderboard.entry</field>
        <field name="arch" type="xml">
            <list>
                <field name="rank"/>
                <field name="user_id"/>
                <field name="metric"/>
                <field name="period"/>
                <field name="value"/>
                <field name="group_id"/>
                <field name="period_start"/>
            </list>
        </field>
    </record>

    <record id="action_ywalks_leaderboard" model="ir.actions.act_window">
        <field name="name">Leaderboards</field>
        <field name="res_model">ywalks.leaderboard.entry</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
