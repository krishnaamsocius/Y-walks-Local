<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_ywalks_reward_rule_list" model="ir.ui.view">
        <field name="name">ywalks.reward.rule.list</field>
        <field name="model">ywalks.reward.rule</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="reward_type"/>
                <field name="min_steps"/>
                <field name="streak_days"/>
                <field name="coins"/>
                <field name="active"/>
            </list>
        </field>
    </record>

     <record id="action_ywalks_reward_rule" model="ir.actions.act_window">
        <field name="name">Reward Rules</field>
        <field name="res_model">ywalks.reward.rule</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Reward Rules.
            </p>
        </field>
    </record>

</odoo>
