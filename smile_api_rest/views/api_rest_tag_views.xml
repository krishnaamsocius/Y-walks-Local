<odoo>

    <record model="ir.ui.view" id="view_api_rest_tag_tree">
        <field name="name">api.rest.tag.tree</field>
        <field name="model">api.rest.tag</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="bottom">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>


    <record id="action_api_rest_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">api.rest.tag</field>
        <field name="view_mode">list,form</field>
<!--        <field name="search_view_id" ref="sale_order_view_search_inherit_sale"/>-->
        <field name="context">{'active_test': False}</field>
        <field name="path">tags</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new quotation, the first step of a new sale!
            </p><p>
                Once the quotation is confirmed, it becomes a sales order.<br/> You will be able to create an invoice and collect the payment.
            </p>
        </field>
    </record>
